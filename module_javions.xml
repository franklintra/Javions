<?xml version="1.0" encoding="UTF-8"?>
<project name="module_javions" default="compile.module.javions">
  <dirname property="module.javions.basedir" file="${ant.file.module_javions}"/>
  
  <property name="module.jdk.home.javions" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.javions" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.javions" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.javions" value="-encoding UTF-8 -source 17 -target 17 ${compiler.args}"/>
  
  <property name="javions.output.dir" value="${module.javions.basedir}/out/production/Javions"/>
  <property name="javions.testoutput.dir" value="${module.javions.basedir}/out/test/Javions"/>
  
  <path id="javions.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="javions.module.production.classpath">
    <path refid="${module.jdk.classpath.javions}"/>
    <path refid="library.junit.jupiter.classpath"/>
  </path>
  
  <path id="javions.runtime.production.module.classpath">
    <pathelement location="${javions.output.dir}"/>
    <path refid="library.junit.jupiter.classpath"/>
  </path>
  
  <path id="javions.module.classpath">
    <path refid="${module.jdk.classpath.javions}"/>
    <pathelement location="${javions.output.dir}"/>
    <pathelement location="${path.variable.maven_repository}/junit/junit/4.13.1/junit-4.13.1.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/hamcrest/hamcrest-core/1.3/hamcrest-core-1.3.jar"/>
    <path refid="library.junit.jupiter.classpath"/>
  </path>
  
  <path id="javions.runtime.module.classpath">
    <pathelement location="${javions.testoutput.dir}"/>
    <pathelement location="${javions.output.dir}"/>
    <pathelement location="${path.variable.maven_repository}/junit/junit/4.13.1/junit-4.13.1.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/hamcrest/hamcrest-core/1.3/hamcrest-core-1.3.jar"/>
    <path refid="library.junit.jupiter.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.javions">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.javions">
    <patternset refid="excluded.from.module.javions"/>
  </patternset>
  
  <path id="javions.module.sourcepath">
    <dirset dir="${module.javions.basedir}">
      <include name="src"/>
      <include name="resources"/>
    </dirset>
  </path>
  
  <path id="javions.module.test.sourcepath">
    <dirset dir="${module.javions.basedir}">
      <include name="test"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.javions" depends="compile.module.javions.production,compile.module.javions.tests" description="Compile module Javions"/>
  
  <target name="compile.module.javions.production" depends="register.custom.compilers" description="Compile module Javions; production classes">
    <mkdir dir="${javions.output.dir}"/>
    <javac2 destdir="${javions.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.javions}/javac">
      <compilerarg line="${compiler.args.javions}"/>
      <bootclasspath refid="javions.module.bootclasspath"/>
      <classpath refid="javions.module.production.classpath"/>
      <src refid="javions.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.javions"/>
    </javac2>
    
    <copy todir="${javions.output.dir}">
      <fileset dir="${module.javions.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.javions.basedir}/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.javions.tests" depends="register.custom.compilers,compile.module.javions.production" description="compile module Javions; test classes" unless="skip.tests">
    <mkdir dir="${javions.testoutput.dir}"/>
    <javac2 destdir="${javions.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.javions}/javac">
      <compilerarg line="${compiler.args.javions}"/>
      <bootclasspath refid="javions.module.bootclasspath"/>
      <classpath refid="javions.module.classpath"/>
      <src refid="javions.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.javions"/>
    </javac2>
    
    <copy todir="${javions.testoutput.dir}">
      <fileset dir="${module.javions.basedir}/test">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.javions" description="cleanup module">
    <delete dir="${javions.output.dir}"/>
    <delete dir="${javions.testoutput.dir}"/>
  </target>
</project>